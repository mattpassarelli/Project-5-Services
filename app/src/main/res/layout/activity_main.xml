<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.matt.project5services.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/addOne"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="@string/add_1_egg" />

        <Button
            android:id="@+id/addTwo"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/add_2_eggs" />

        <Button
            android:id="@+id/subtractOne"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/subtract_1_egg" />

        <Button
            android:id="@+id/breakfast"
            android:layout_width="175dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/make_breakfast" />


    </LinearLayout>
</RelativeLayout>
